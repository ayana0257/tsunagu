            <% @blogs.each do |blog| %>
              <td><%= blog.title %></td>
              <td><%= link_to "詳しく", blog_path(blog.id) %></td>
            <% end %>
          </table>
          </div>
        </div>
      </div>


<div class="text-center"><%= link_to "参加予定一覧",clips_path, class: "btn btn-info" %></div>

