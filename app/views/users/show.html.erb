<% flash.each do |message_type, message| %>
<div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<h2>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @user.name %>さんのページ</h2>
<div class="container">
<div class="row">
  <div class="col-sm-6">
    <%= attachment_image_tag @user, :image, :fill, 130, 130 %>
  </div>
  <div class="col-sm-6">
    <%= @user.profile %>
    <%= link_to "編集",edit_user_path(@user.id),class: "btn btn-default" %>
  </div>
</div>

&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<div class="container">
  <div class="row">
    <div class="col-lg-5">
