<!DOCTYPE html>
<html>
  <head>
    <title>Tsunagu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="swiper.min.css">
  </head>

<body>


<header>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample4">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"> Tsunagu </a>
    </div>
    
    <div class="collapse navbar-collapse" id="navbarEexample4">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
        <li><%= link_to "my page", user_path(current_user.id) %></li>
        <li><%= link_to "friends", users_path %></li>
        <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to "新規登録", new_user_registration_path %></li>
        <li><%=link_to "login", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
</header>

    <%= yield %>

    <script src="swiper.min.js"></script>
  </body>
</html>
